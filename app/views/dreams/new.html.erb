
<h1>Fund a Dream</h1>

<% flash.each do |type, msg| %>
  <div>
    <p style="color: red;"><%= msg %></p>
  </div>
<% end %>

<%# #Lowest level of abstraction -- most explicit control
<form action="/dreams" method="POST"> %>

<%# # Mid-level abstraction %>
<%= form_tag("/dreams") do %>
  <%= label_tag "name", "Dream Name" %>
  <% if @dream && @dream.errors[:name] %>
    <% @dream.errors.full_messages_for(:name).each do |message| %>
    <p><%= message %></p>
    <% end %>
  <% end %>
  <%= text_field_tag "name" %>
<br></br>
  <%= label_tag "Funding Needed" %>
  <% if @dream && @dream.errors[:cost] %>
    <% @dream.errors.full_messages_for(:cost).each do |message| %>
    <p><%= message %></p>
    <% end %>
  <% end %>
  <%= text_field_tag "cost" %>
  <%# <%= hidden_field_tag "dreamer_id", @current_user.id %>
  <%= submit_tag "Request Dream Funding" %>
<% end %>

