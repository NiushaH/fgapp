<h1> Login to Fairy Godmother :: A Human Capital Investment App</h1>

<% if flash[:notice] %>
<h2><%= flash[:notice] %></h2>
<% end %>

<%= form_tag("/sessions") do%>
  <p>
    <%= label_tag "email", "Email:" %>
    <%= text_field_tag "email" %>
  </p>
  <p>
    <%= label_tag "password", "Password:" %>
    <% if @user && @user.errors[:password] %>
    <p>Please include a password.</p>
    <% end %>

    <%= password_field_tag "password" %>
  </p>

  <%= submit_tag "Login" %>
<% end %>
