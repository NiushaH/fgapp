<h1> Login to Fairy Godmother :: A Human Capital Investment App</h1>

<% if flash[:notice] %>
<h2><%= flash[:notice] %></h2>
<% end %>

<%= form_tag("/sessions") do%>
  <p>
    <%= label_tag "email", "Email:" %>
    <%= text_field_tag "email" %>
  </p>
  <p>
    <%= label_tag "password", "Password:" %>
    <% if @user && @user.errors[:password] %>
    <p>Please include a password.</p>
    <% end %>

    <%= password_field_tag "password" %>
  </p>

  <%= submit_tag "Login" %>
<% end %>

<h1>Omniauth Login</h1>

<div id="login-form">
    <%= form_with(model: @user, url: "/login") do |f| %>
        <div class="form-control">
            <%= f.label :email, class: "form-label" , class: "form-label" %>
            <%= f.email_field :email, class: "form-input" %>
        </div>
        <div class="form-control">
            <%= f.label :password, class: "form-label" , class: "form-label" %>
            <%= f.password_field :password, class: "form-input" %>
        </div>
        <%= f.submit :signin%>
    <% end %>
    Don't have an account? <%= link_to "Register", register_path, class: "show-signup" %> here.
    <br>
    <p>Social Login:</p>
    <div class="third-party-login">
        <%= button_to "Log in with Google", '/auth/google_oauth2'  %>
        <%= button_to "Log in with Github", '/auth/github'  %>
    </div>
</div>
